{
	"compilerOptions": {
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"strict": true,
		
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,

		"lib": ["ESNext"],
		"target": "ESNext",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"outDir": "./build",
		"rootDir": "./src",
		"baseUrl": "./",
		"paths": {
			"#utils": ["./src/index.ts"],
			"#console": ["./src/ConsoleUtils/index.ts"],
			"#json": ["./src/JsonUtils/index.ts"],
			"#embed": ["./src/EmbedUtils/index.ts"]
		}
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}